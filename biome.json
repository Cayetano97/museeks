{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "domains": {
      "project": "recommended",
      "react": "recommended",
      "test": "recommended",
      "types": "recommended"
    },
    "rules": {
      "recommended": true,
      "nursery": {
        "recommended": true
      },
      "correctness": {
        "recommended": true,
        "noRestrictedElements": {
          "level": "error",
          "options": {
            "elements": {
              "a": "use element/<Link> instead"
            }
          }
        }
      },
      "a11y": {
        "noNoninteractiveElementInteractions": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineEnding": "lf"
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              [":NODE:", ":BUN:"],
              ":BLANK_LINE:",
              [":ALIAS:", ":PACKAGE:"],
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "linter": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/src/generated/**/*.ts",
      "!**/src-tauri/target/**/*",
      "!**/src-tauri/gen/**/*"
    ]
  }
}
